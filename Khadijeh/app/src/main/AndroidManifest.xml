<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ermile.khadijehapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".utility.Network"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".Activity.ListNews"
            tools:ignore="InnerclassSeparator"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity android:name=".Activity.errorNet"
            tools:ignore="InnerclassSeparator"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.Language"
            tools:ignore="InnerclassSeparator" />

        <activity android:name=".Activity.Add_Delneveshte"
            tools:ignore="InnerclassSeparator"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"/>

        <activity android:name=".Activity.MainActivity"
            tools:ignore="InnerclassSeparator"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"/>

        <activity android:name=".Activity.Intro"
            tools:ignore="InnerclassSeparator"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"/>

        <activity android:name=".Activity.Delneveshte"
            tools:ignore="InnerclassSeparator"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"/>

        <activity android:name=".Activity.ApiView"
            tools:ignore="InnerclassSeparator"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"/>

        <activity android:name=".Activity.Video_View"
            tools:ignore="InnerclassSeparator"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"/>

        <activity android:name=".Activity.News"
            tools:ignore="InnerclassSeparator"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"/>

        <activity android:name=".Activity.Web_View"
            tools:ignore="InnerclassSeparator"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"/>

        <activity android:name=".Activity.Splash"
            tools:ignore="InnerclassSeparator"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".utility.Notif"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.ermile.khadije.NotificationService" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <activity
            android:name=".Activity.status"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="khadije" />
            </intent-filter>
        </activity>
    </application>

</manifest>
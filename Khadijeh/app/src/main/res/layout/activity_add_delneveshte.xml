<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.Add_Delneveshte">



    <EditText
        android:id="@+id/edt_del"
        android:textSize="16dp"
        android:hint="صدای قلبت را بنویس..."
        android:background="@drawable/bg_radus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/number_del"
            android:layout_margin="5dp"
            android:textSize="12dp"
            android:padding="5dp"
            android:maxLength="11"
            android:maxLines="1"
            android:hint="شماره تلفن اختیاری"
            android:background="@drawable/bg_radus"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="35dp"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <TextView
                android:textSize="12sp"
                android:text="جنسیت"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ToggleButton
                android:id="@+id/sex_del"
                android:textOff="Man"
                android:textOn="Woman"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <Button
            android:id="@+id/send_del"
            style="@style/Widget.AppCompat.Button"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textSize="12dp"
            android:text="Send"
            android:background="@drawable/bg_radus"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="35dp"/>


    </LinearLayout>





</LinearLayout>
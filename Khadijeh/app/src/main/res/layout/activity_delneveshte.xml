<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:layoutDirection="rtl"
    android:alpha="0.7"
    tools:context=".Activity.Delneveshte">



    <ProgressBar
        android:id="@+id/progress_del"
        android:layout_marginBottom="@dimen/_150sdp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/recyclerview_del"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/send_del_acdel"
        android:padding="0dp"
        android:layout_margin="@dimen/_16sdp"
        android:layout_gravity="bottom|end|right"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RtlHardcoded">


        <LinearLayout
            android:gravity="center"
            android:background="@drawable/bg_btn_send_del_static"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp">

            <ImageView
                android:layout_marginEnd="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_gravity="right|center"
                android:src="@drawable/ic_add_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_gravity="center|left"
                android:textColor="#fff"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:fontFamily="@font/iransans_bold"
                android:textSize="@dimen/_8sdp"
                android:text="@string/send_delneveshteh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>